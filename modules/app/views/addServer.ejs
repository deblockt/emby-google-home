<html>
    <head>
        <title><%= __('Add server informations') %></title>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
    </head>
    <body>
        <div class="container">
            <div class="row align-items-center" style="min-height: 100vh">
                <div class="col">
                    <h1><%= __('Add server informations') %></h1>
                    
                    <%if (error) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= error %>
                        </div>
                    <% } %>

                    <% if (success) { %>
                        <div class="alert alert-success" role="alert">
                            <%= __('Your informations have been saved. You can now use emby for google home') %>
                        </div>
                    <% } %>
                    <form method="post" action="/config/addServerInfo">
                        <div class="form-group">
                            <label for="uri"><%= __('Uri') %></label>
                            <input id="uri" name="uri" class="form-control" type="text" placeholder="<%= __('the uri to server access')%>" required aria-describedby="uriHelpBlock">

                            <small id="uriHelpBlock" class="form-text text-muted">
                                <%= __('uri is encrypted') %>
                            </small>
                        </div>

                        <div class="form-group">
                            <label for="user"><%= __('Emby user') %></label>
                            <input id="user" name="user"  class="form-control" type="text" placeholder="<%= __('emby user to connect') %>" required />
                        </div>

                        <div class="form-group">
                            <label for="password"><%= __('Password') %></label>
                            <input id="password" name="password"  class="form-control" type="password" placeholder="<%= __('emby user password') %>" aria-describedby="passwordHelpBlock"/>

                            <small id="passwordHelpBlock" class="form-text text-muted">
                                <%= __('password is encrypted') %>
                            </small>
                        </div>
                        
                        <input class="btn btn-primary" type="submit"/>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>